@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ARTEVO</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body style="background-color:#f8f9fa;">
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color:#f1e6ff; border-radius: 25px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); margin: 20px auto; max-width: 1300px; padding: 10px 50px;">
            <div class="container-fluid justify-content-between align-items-center">
                <a class="navbar-brand mx-3 fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem; color: #5d3a9b;">ARTEVO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="mainNav">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item mx-2">
                            <a class="nav-link" style="color: #5d3a9b;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" style="color: #5d3a9b;" asp-area="" asp-controller="Umjetnina" asp-action="Index">Artworks</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" style="color: #5d3a9b;" asp-area="" asp-controller="Aukcija" asp-action="Index">Auctions</a>
                        </li>
                        <li class="nav-item mx-2">
                            @if (isAuthenticated)
                            {
                                <a class="nav-link" style="color: #5d3a9b;" asp-area="" asp-controller="Aukcija" asp-action="Index">My Auctions</a>
                            }
                            else
                            {
                                <a class="nav-link" style="color: #5d3a9b;" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
                            }
                        </li>
                    </ul>

                    <!-- Right-side: Profile/Logout + Search -->
                    <div class="d-flex align-items-center gap-3">
                        @if (isAuthenticated)
                        {
                           <a class="btn btn-sm"
   asp-area="Identity"
   asp-page="/Account/Manage/Index"
   asp-route-returnUrl="/"
   style="background-color: #d9b3ff; color: #5d3a9b; border-radius: 20px; padding: 6px 14px;">
    My Profile
</a>

                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-sm"
                               asp-area="Identity"
                               asp-page="/Account/Login"
                               style="background-color: #d9b3ff; color: #5d3a9b; border-radius: 20px; padding: 6px 14px;">
                                Sign in
                            </a>
                        }

                       
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted text-center mt-5 py-3" style="font-size: 0.9rem;">
        <div class="container">
            &copy; 2025 - ARTEVO - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
