@model Grupa5Tim3.Models.Umjetnina
@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 18px;
        line-height: 1.6;
    }

   .umjetnina-container {
    background-color: #ebdffd; 
    border-radius: 20px;
    padding: 40px;
    max-width: 1000px;
    margin: 40px auto;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.07);
}


    .custom-purple-btn {
        background-color: #a585e0;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        font-size: 18px;
        transition: all 0.3s ease;
    }

    .custom-purple-btn:hover {
        background-color: #8e6bd1;
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: bold;
    }

.umjetnina-img {
    width: 100%;
    max-width: 500px;
    height: auto;
    max-height: 500px;
    border-radius: 25px; 
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    display: block;
    margin: 0 auto;
}


    .col-md-5, .col-md-7 {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .umjetnina-title {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .umjetnina-label {
        font-weight: bold;
    }

    .umjetnina-value {
        margin-bottom: 10px;
        font-size: 19px;
    }

    .text-justify {
        text-align: justify;
    }
</style>


<div class="umjetnina-container">
    <div class="row">
        <!-- Left side: image -->
        <div class="col-md-5 mb-4 text-center">
            @if (!string.IsNullOrEmpty(Model.SlikaPath))
            {
                <img src="@Url.Content(Model.SlikaPath)" alt="Artwork Image" class="umjetnina-img" />
            }
            else
            {
                <p>(No image available)</p>
            }
        </div>

        <!-- Right side: details -->
        <div class="col-md-7">
            <h2 class="umjetnina-title">@Model.naziv</h2>

            <div class="umjetnina-value"><span class="umjetnina-label">Author:</span> @Model.autor</div>
            <div class="umjetnina-value"><span class="umjetnina-label">Period:</span> @Model.period</div>
            <div class="umjetnina-value"><span class="umjetnina-label">Technique:</span> @Model.tehnika</div>

            @if (ViewBag.Aukcija != null)
            {
                <div class="umjetnina-value">
                    <span class="umjetnina-label">Auction starts:</span>
                    <span style="color: green; font-weight: bold;">
                        @((DateTime)ViewBag.Aukcija.pocetakAukcije)
                    </span>
                </div>
                <div class="umjetnina-value">
                    <span class="umjetnina-label">Auction ends:</span>
                    <span style="color: red; font-weight: bold;">
                        @((DateTime)ViewBag.Aukcija.zavrsetakAukcije)
                    </span>
                </div>

                <div class="umjetnina-value" style="margin-top: 10px;">
                    <span class="umjetnina-label">Auction status:</span>
                    @if (ViewBag.Aukcija.status == Status.Aktivna)
                    {
                        <span style="background-color:#28a745; color:white; font-weight:bold; padding:4px 12px; border-radius:6px; margin-left:10px;">
                            Active
                        </span>
                    }
                    else
                    {
                        <span style="background-color:#dc3545; color:white; font-weight:bold; padding:4px 12px; border-radius:6px; margin-left:10px;">
                            Finalized
                        </span>
                    }
                </div>
            }
            else
            {
                <div class="umjetnina-value">
                    <em>No active auction for this artwork.</em>
                </div>
            }

            <div class="mt-4">
                <p class="umjetnina-label">Description:</p>
                <p class="text-justify">@Model.opis</p>
            </div>

            @if (User.IsInRole("Administrator"))
            {
                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.umjetinaID" class="custom-purple-btn">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model?.umjetinaID" class="btn btn-danger">Delete</a>
                </div>
            }
        </div>
    </div>
</div>
