@model Grupa5Tim3.Models.Umjetnina
@{
    ViewData["Title"] = "Detalji";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f3e8ff;
    }

    .umjetnina-container {
        background-color: #f5e9ff;
        border-radius: 20px;
        padding: 40px;
        max-width: 1000px;
        margin: 40px auto;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .umjetnina-title {
        font-size: 36px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
    }

    .umjetnina-label {
        font-weight: 600;
        font-size: 18px;
        color: #333;
    }

    .umjetnina-value {
        font-size: 18px;
        margin-bottom: 16px;
    }

    .umjetnina-img {
        max-height: 350px;
        border-radius: 12px;
        object-fit: cover;
        width: 100%;
    }

    .custom-purple-btn {
        background-color: #c6b3f9;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        padding: 12px 24px;
        font-size: 18px;
        transition: background-color 0.3s ease;
    }

        .custom-purple-btn:hover {
            background-color: #b49ee0;
        }

    .text-justify {
        text-align: justify;
    }
</style>

<div class="umjetnina-container">
    <div class="row">
        <!-- Lijeva strana: slika -->
        <div class="col-md-5 mb-4 text-center">
            @if (!string.IsNullOrEmpty(Model.SlikaPath))
            {
                <img src="@Model.SlikaPath" alt="Slika umjetnine" class="umjetnina-img" />
            }
            else
            {
                <p>(Nema slike)</p>
            }
        </div>

        <!-- Desna strana: detalji -->
        <div class="col-md-7">
            <h2 class="umjetnina-title">@Model.naziv</h2>

            <div class="umjetnina-value"><span class="umjetnina-label">Autor:</span> @Model.autor</div>
            <div class="umjetnina-value"><span class="umjetnina-label">Period:</span> @Model.period</div>
            <div class="umjetnina-value"><span class="umjetnina-label">Tehnika:</span> @Model.tehnika</div>
@if (ViewBag.Aukcija != null)
{
    <div class="umjetnina-value">
        <span class="umjetnina-label">Početak aukcije:</span>
        <span style="color: green; font-weight: bold;">
            @((DateTime)ViewBag.Aukcija.pocetakAukcije)
        </span>
    </div>
    <div class="umjetnina-value">
        <span class="umjetnina-label">Kraj aukcije:</span>
        <span style="color: red; font-weight: bold;">
            @((DateTime)ViewBag.Aukcija.zavrsetakAukcije)
        </span>
    </div>

    <div class="umjetnina-value" style="margin-top: 10px;">
        <span class="umjetnina-label">Status aukcije:</span>
        @if (ViewBag.Aukcija.status == Status.Aktivna)
        {
            <span style="background-color:#28a745; color:white; font-weight:bold; padding:4px 12px; border-radius:6px; margin-left:10px;">
                Aktivna
            </span>
        }
        else
        {
            <span style="background-color:#dc3545; color:white; font-weight:bold; padding:4px 12px; border-radius:6px; margin-left:10px;">
                Finalizirana
            </span>
        }
    </div>
}
else
{
    <div class="umjetnina-value">
        <em>Nema aktivne aukcije za ovu umjetninu.</em>
    </div>
}


            <div class="mt-4">
                <p class="umjetnina-label">Opis:</p>
                <p class="text-justify">@Model.opis</p>
            </div>

            @if (User.IsInRole("Administrator"))
            {
                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model?.umjetinaID" class="custom-purple-btn">Uredi</a>
                    <a asp-action="Delete" asp-route-id="@Model?.umjetinaID" class="btn btn-danger">Obriši</a>
                </div>
            }
        </div>
    </div>
</div>
