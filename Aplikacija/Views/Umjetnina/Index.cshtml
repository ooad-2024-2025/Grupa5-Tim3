@model IEnumerable<Grupa5Tim3.Models.Umjetnina>

@{
    ViewData["Title"] = "Available Artworks";
    var aukcije = ViewBag.Aukcije as Dictionary<int, Grupa5Tim3.Models.Aukcija>;
}

<div class="container mb-3 d-flex justify-content-center">
    <form class="d-flex w-50" asp-controller="Umjetnina" asp-action="Index" method="get">
        <input class="form-control rounded-pill me-2" type="search" name="search" placeholder="Search artworks..." style="min-width: 180px;" value="@ViewBag.Search">
        <button class="btn rounded-pill" type="submit" style="background-color: #d9b3ff; color: #5d3a9b; border: none;">Search</button>
    </form>
</div>

@if (User.IsInRole("Administrator"))
{
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn" style="background-color: #D8BFD8; color: black;">Add Post</a>
    </div>
}

<div class="filters-div" style="margin: 20px;">
    <button class="custom-bid-btn" onclick="openSidebar()" style="background-color: #e1c8ff; border: none; border-radius: 12px; padding: 8px 18px; font-weight: 500;">Filters</button>
</div>

<!-- Sidebar -->
<div id="filterSidebar" class="sidebar">
    <a href="javascript:void(0)" onclick="closeSidebar()" class="closebtn">&times;</a>
    <div style="padding: 20px 30px; color: #3a2e45;">
        <h4>🎨 Filters</h4>
        <form method="get" asp-controller="Umjetnina" asp-action="Index" id="filterForm">

            <h5>Authors</h5>
            @foreach (var autor in (List<string>)ViewBag.Autori ?? new List<string>())
            {
                <div>
                    <label>
                        <input type="checkbox" name="autori" value="@autor"
                               @(ViewBag.SelectedAutori?.Contains(autor) == true ? "checked" : "") />
                        <span>@autor</span>
                    </label>
                </div>
            }

            <h5>Techniques</h5>
            @foreach (var tehnika in (List<string>)ViewBag.Tehnike ?? new List<string>())
            {
                <div>
                    <label>
                        <input type="checkbox" name="tehnike" value="@tehnika"
                               @(ViewBag.SelectedTehnike?.Contains(tehnika) == true ? "checked" : "") />
                        <span>@tehnika</span>
                    </label>
                </div>
            }

            <h5>Periods</h5>
            @foreach (var period in (List<string>)ViewBag.Periodi ?? new List<string>())
            {
                <div>
                    <label>
                        <input type="checkbox" name="periodi" value="@period"
                               @(ViewBag.SelectedPeriodi?.Contains(period) == true ? "checked" : "") />
                        <span>@period</span>
                    </label>
                </div>
            }

            <h5>Auction Status</h5>
            <input type="range" id="auctionStatusSlider" name="auctionStatusIndex" min="0" max="4" value="0" oninput="updateStatusLabel(this.value)" class="form-range" />
            <div>
                <strong>Status:</strong> <span id="auctionStatusLabel">All</span>
            </div>

            <h5>Current bidds</h5>
            <div class="price-range-slider mb-3">
                <div class="price-labels mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="fw-bold">Min price:</label>
                        <span id="minPriceLabel" class="price-value">@(ViewBag.SelectedMinPrice.ToString("F2")) KM</span>
                    </div>
                    <input type="range"
                           id="minPrice"
                           name="minPrice"
                           min="0"
                           max="@ViewBag.MaxPrice"
                           value="@ViewBag.SelectedMinPrice"
                           step="1"
                           class="form-range mb-3">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="fw-bold">Max price:</label>
                        <span id="maxPriceLabel" class="price-value">@(ViewBag.SelectedMaxPrice.ToString("F2")) KM</span>
                    </div>
                    <input type="range"
                           id="maxPrice"
                           name="maxPrice"
                           min="0"
                           max="@ViewBag.MaxPrice"
                           value="@ViewBag.SelectedMaxPrice"
                           step="1"
                           class="form-range">
                </div>
            </div>

            <button type="submit" class="btn btn-outline-dark mt-4" style="background-color: #e1c8ff; border: none; border-radius: 8px; padding: 6px 20px; font-weight: 500;">Apply</button>
        </form>
    </div>
</div>

<!-- Overlay -->
<div id="overlay" class="overlay" onclick="closeSidebar()"></div>

<script>
    const statuses = ["All", "Active", "Finalized", "Canceled", "Pending"];
    const priceRangeSection = document.querySelector('.price-range-slider');
    const auctionStatusSlider = document.getElementById('auctionStatusSlider');

    function openSidebar() {
        document.getElementById("filterSidebar").style.width = "300px";
        document.getElementById("overlay").style.display = "block";
    }

    function closeSidebar() {
        document.getElementById("filterSidebar").style.width = "0";
        document.getElementById("overlay").style.display = "none";
    }

    function updateStatusLabel(index) {
        document.getElementById("auctionStatusLabel").textContent = statuses[index];
        const minPrice = document.getElementById("minPrice");
        const maxPrice = document.getElementById("maxPrice");

        // Disable price range for All (0) and Pending (4) status
        if (index === "0" || index === "4") {
            priceRangeSection.style.opacity = "0.5";
            priceRangeSection.style.pointerEvents = "none";
            minPrice.disabled = true;
            maxPrice.disabled = true;
        } else {
            priceRangeSection.style.opacity = "1";
            priceRangeSection.style.pointerEvents = "auto";
            minPrice.disabled = false;
            maxPrice.disabled = false;
        }
    }

    window.onload = function () {
        const urlParams = new URLSearchParams(window.location.search);
        const statusIndex = urlParams.get("auctionStatusIndex") || "0";
        auctionStatusSlider.value = statusIndex;
        updateStatusLabel(statusIndex);
    };

    // Add event listener for status slider changes
    auctionStatusSlider.addEventListener('input', function() {
        updateStatusLabel(this.value);
    });

    document.addEventListener('DOMContentLoaded', function() {
        const minSlider = document.getElementById('minPrice');
        const maxSlider = document.getElementById('maxPrice');
        const minLabel = document.getElementById('minPriceLabel');
        const maxLabel = document.getElementById('maxPriceLabel');
        const filterForm = document.getElementById('filterForm');

        function updateLabels() {
            minLabel.textContent = `${Number(minSlider.value).toFixed(2)} KM`;
            maxLabel.textContent = `${Number(maxSlider.value).toFixed(2)} KM`;
        }

        function enforceMinMax() {
            const minVal = Number(minSlider.value);
            const maxVal = Number(maxSlider.value);

            if (minVal > maxVal) {
                if (this === minSlider) {
                    maxSlider.value = minVal;
                } else {
                    minSlider.value = maxVal;
                }
            }
            updateLabels();
        }

        minSlider.addEventListener('input', enforceMinMax);
        maxSlider.addEventListener('input', enforceMinMax);
        updateLabels();

        if (filterForm) {
            filterForm.addEventListener('submit', function(e) {
                const statusValue = document.getElementById('auctionStatusSlider').value;

                if (statusValue === "0" || statusValue === "4") {
                    document.getElementById('minPrice').disabled = true;
                    document.getElementById('maxPrice').disabled = true;
                }
            });
        }

        // Initial check for status
        updateStatusLabel(auctionStatusSlider.value);
    });
</script>

<div class="row">
    @foreach (var item in Model)
    {
        var aukcija = aukcije != null && aukcije.ContainsKey(item.umjetinaID)
        ? aukcije[item.umjetinaID]
        : null;

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(!string.IsNullOrEmpty(item.SlikaPath) ? item.SlikaPath : Url.Content("~/images/placeholder.jpg"))"
                     class="card-img-top" style="height: 300px; object-fit: cover;" />

                <div class="card-body text-center">
                    <h5 class="card-title">"@item.naziv"</h5>
                    <p class="card-text">@item.autor</p>

                    @if (aukcija != null)
                    {
                        <p class="card-text fw-bold text-black">
                            @if (aukcija.status == Status.Aktivna)
                            {
                                <span>Highest bid: @aukcija.trenutnaCijena.ToString("F2") KM</span>
                            }
                            else if (aukcija.status == Status.Finalizirana)
                            {
                                <span>Highest bid was: @aukcija.trenutnaCijena.ToString("F2") KM</span>
                            }
                            else
                            {
                                <span>Status: @aukcija.status.ToString()</span>
                            }
                        </p>
                    }
                    else
                    {
                        <p class="card-text fw-bold text-black">Highest bid: Not yet available for bidding</p>
                    }

                    @if (aukcija?.status == Status.Finalizirana)
                    {
                        <button class="btn btn-strong-danger btn-sm mb-2" disabled>ENDED</button>
                    }
                    else if (aukcija?.status == Status.Aktivna && !User.IsInRole("Kriticar"))
                    {
                        <a asp-controller="Aukcija" asp-action="Bid" asp-route-id="@item.umjetinaID"
                           class="btn btn-sm custom-bid-btn mb-2">BID!</a>
                    }

                    @if (!User.IsInRole("Kriticar"))
                    {
                        <a asp-action="Details" asp-route-id="@item.umjetinaID"
                           class="btn btn-link d-block mt-1">Details</a>
                    }

                    @if (User.IsInRole("Kriticar") && aukcija?.status != Status.Finalizirana)
                    {
                        if (item.pocetnaCijena > 0)
                        {
                            <p class="text-success fw-bold mb-2">Starting price set!</p>
                        }
                        else
                        {
                            <a asp-action="Edit" asp-route-id="@item.umjetinaID"
                               class="btn btn-sm custom-postavi-btn mb-2">Set starting price</a>
                        }
                    }
                </div>

                @if (User.IsInRole("Administrator"))
                {
                    <div class="card-footer text-center">
                        <a asp-action="Edit" asp-route-id="@item.umjetinaID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.umjetinaID">Delete</a>
                    </div>
                }
            </div>
        </div>
    }
</div>

