@model Grupa5Tim3.Models.Umjetnina
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    ViewData["Title"] = "Edit";
    var isKriticar = User.IsInRole("Kriticar");
}

<hr />

@if (isKriticar)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <form asp-action="Edit" asp-controller="Umjetnina" method="post" enctype="multipart/form-data"
              style="background-color: #e8d8ff; padding: 30px; border-radius: 20px; box-shadow: 0 0 12px rgba(0,0,0,0.15); width: 400px;">
            <input type="hidden" asp-for="umjetinaID" />

            <div class="form-group text-center mb-4">
                <label asp-for="pocetnaCijena" class="control-label fw-bold mb-2">Početna cijena</label>
                <input asp-for="pocetnaCijena" class="form-control text-center"
                       style="background-color: #ffffff; border-radius: 10px;" />
                <span asp-validation-for="pocetnaCijena" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Postavi početnu cijenu"
                       class="btn"
                       style="background-color: #9c6be8; color: white; border-radius: 10px; padding: 10px 20px;" />
            </div>
        </form>
    </div>
}

else if(User.IsInRole("Administrator"))
{
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" asp-controller="Umjetnina" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="umjetinaID" />

                <div class="form-group">
                    <label asp-for="naziv" class="control-label"></label>
                    <input asp-for="naziv" class="form-control" />
                    <span asp-validation-for="naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="autor" class="control-label"></label>
                    <input asp-for="autor" class="form-control" />
                    <span asp-validation-for="autor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="period" class="control-label"></label>
                    <input asp-for="period" class="form-control" />
                    <span asp-validation-for="period" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="datum" class="control-label"></label>
                    <input asp-for="datum" class="form-control" />
                    <span asp-validation-for="datum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="tehnika" class="control-label"></label>
                    <input asp-for="tehnika" class="form-control" />
                    <span asp-validation-for="tehnika" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label fw-bold">Nova slika (opcionalno):</label>
                    <input type="file" name="Slika" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="opis" class="control-label"></label>
                    <input asp-for="opis" class="form-control" />
                    <span asp-validation-for="opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Spremi" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
