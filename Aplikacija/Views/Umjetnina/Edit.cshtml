@model Grupa5Tim3.Models.Umjetnina

@{
    ViewData["Title"] = "Uredi umjetninu";
}

<h1 class="mb-4">Uredi umjetninu</h1>

@if (User.IsInRole("Administrator"))
{
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="umjetinaID" />

                    <div class="form-group mb-3">
                        <label asp-for="naziv" class="form-label fw-bold"></label>
                        <input asp-for="naziv" class="form-control" />
                        <span asp-validation-for="naziv" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="autor" class="form-label fw-bold"></label>
                        <input asp-for="autor" class="form-control" />
                        <span asp-validation-for="autor" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="period" class="form-label fw-bold"></label>
                        <input asp-for="period" class="form-control" />
                        <span asp-validation-for="period" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="datum" class="form-label fw-bold"></label>
                        <input asp-for="datum" type="date" class="form-control" />
                        <span asp-validation-for="datum" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="tehnika" class="form-label fw-bold"></label>
                        <input asp-for="tehnika" class="form-control" />
                        <span asp-validation-for="tehnika" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="pocetnaCijena" class="form-label fw-bold"></label>
                        <input asp-for="pocetnaCijena" class="form-control" />
                        <span asp-validation-for="pocetnaCijena" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="opis" class="form-label fw-bold"></label>
                        <textarea asp-for="opis" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="opis" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Trenutna slika:</label><br />
                        @if (!string.IsNullOrEmpty(Model.SlikaPath))
                        {
                            <img src="@Model.SlikaPath" class="img-thumbnail" style="max-width: 200px;" />
                        }
                        else
                        {
                            <p class="text-muted fst-italic">(Nema slike)</p>
                        }
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Nova slika (opcionalno):</label>
                        <input type="file" name="NovaSlika" class="form-control" />
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Sačuvaj promjene" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ms-2">Nazad</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-4">
        <strong>Upozorenje:</strong> Nemate dozvolu za uređivanje umjetnine.
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
