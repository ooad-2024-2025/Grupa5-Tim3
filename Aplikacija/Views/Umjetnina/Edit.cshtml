@model Grupa5Tim3.Models.Umjetnina
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    ViewData["Title"] = "Edit";
    var isKriticar = User.IsInRole("Kriticar");
}

<hr />

@if (isKriticar)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <form asp-action="Edit" asp-controller="Umjetnina" method="post" enctype="multipart/form-data"
              style="background-color: #e8d8ff; padding: 30px; border-radius: 20px; box-shadow: 0 0 12px rgba(0,0,0,0.15); width: 400px;">
            <input type="hidden" asp-for="umjetinaID" />

            <div class="form-group text-center mb-4">
                <label asp-for="pocetnaCijena" class="control-label fw-bold mb-2">Starting price</label>
                <input asp-for="pocetnaCijena" class="form-control text-center"
                       style="background-color: #ffffff; border-radius: 10px;" />
                <span asp-validation-for="pocetnaCijena" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Set starting price"
                       class="btn"
                       style="background-color: #9c6be8; color: white; border-radius: 10px; padding: 10px 20px;" />
            </div>
        </form>
    </div>
}

else if (User.IsInRole("Administrator"))
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <form asp-action="Edit" asp-controller="Umjetnina" method="post" enctype="multipart/form-data"
              style="background-color: #f8f5ff; padding: 40px; border-radius: 20px; box-shadow: 0 0 15px rgba(0,0,0,0.1); width: 600px;">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="umjetinaID" />

            <h2 class="text-center mb-4 fw-bold">Edit artwork</h2>

            <div class="form-group mb-3">
                <label asp-for="naziv" class="fw-bold">Title</label>
                <input asp-for="naziv" class="form-control rounded" />
                <span asp-validation-for="naziv" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="autor" class="fw-bold">Author</label>
                <input asp-for="autor" class="form-control rounded" />
                <span asp-validation-for="autor" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="period" class="fw-bold">Period</label>
                <input asp-for="period" class="form-control rounded" />
                <span asp-validation-for="period" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="datum" class="fw-bold">Date</label>
                <input asp-for="datum" type="date" class="form-control rounded" />
                <span asp-validation-for="datum" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="tehnika" class="fw-bold">Technique</label>
                <input asp-for="tehnika" class="form-control rounded" />
                <span asp-validation-for="tehnika" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">New picture (optional):</label>
                <input type="file" name="Slika" class="form-control rounded" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="opis" class="fw-bold">Description</label>
                <textarea asp-for="opis" class="form-control rounded" rows="3"></textarea>
                <span asp-validation-for="opis" class="text-danger small"></span>
            </div>

            <div class="form-group text-center mt-4">
                <input type="submit" value="SAVE"
                       class="btn"
                       style="background-color: #c7a8f5; color: white; font-weight: bold; padding: 10px 30px; border-radius: 12px;" />
            </div>
        </form>
    </div>
}


<div class="mt-3">
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
