@model Grupa5Tim3.Models.Aukcija

@{
    ViewData["Title"] = "BID";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="width: 30rem; border-radius: 20px; background-color: #F3EFFF;">
        <div class="card-body text-center" style="border-radius: 20px;">
            <h2 class="card-title mb-4" style="color: #5E35B1; font-weight: 600;">BIDDING</h2>

            @if (Model == null)
            {
                <div class="alert alert-info rounded-pill">
                    The auction is not active yet.
                </div>
            }
            else
            {
                <p><strong>Artwork ID:</strong> @Model.umjetninaID</p>
                <p><strong>Current Price:</strong> @Model.trenutnaCijena</p>

                @if (Model.status == Status.Aktivna)
                {
                    <form asp-action="Bid" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.AukcijaID" />
                        <div class="form-group mb-3 text-start">
                            <label for="novaCijena" class="form-label">Enter your bid:</label>
                            <input type="number" step="0.01" class="form-control rounded-pill" name="novaCijena" required />
                        </div>
                        <button type="submit"
                                class="btn"
                                style="background-color: #D6C4F2; color: black; border-radius: 25px; padding: 10px 25px;">
                            BID
                        </button>
                    </form>
                }
                else if (Model.status == Status.Finalizirana)
                {
                    <div class="alert alert-info mt-4 rounded-pill">
                        The auction has ended.
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4 rounded-pill">
                        The auction has been canceled.
                    </div>
                }
            }

            <a asp-action="Index"
               class="btn btn-secondary mt-3 rounded-pill"
               style="padding: 8px 20px;">
                Back to auctions
            </a>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3 rounded">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
