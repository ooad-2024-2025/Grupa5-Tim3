@model Grupa5Tim3.Models.Aukcija

@{
    ViewData["Title"] = "Detalji aukcije";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 24rem; border-radius: 16px;">
        <div class="card-body text-center">
            <h4 class="card-title mb-3"><strong>Detalji aukcije</strong></h4>

            <img src="@Url.Content(ViewBag.SlikaPath)" alt="Slika umjetnine"
                 class="img-fluid mb-3" style="max-height: 300px; object-fit: cover;" />

            <p class="card-text"><strong>Umjetnina ID:</strong> @Model.umjetninaID</p>
            <p class="card-text"><strong>Trenutna cijena:</strong> @Model.trenutnaCijena</p>
            <p class="card-text"><strong>Početak aukcije:</strong> @Model.pocetakAukcije.ToString("dd.MM.yyyy HH:mm")</p>
            <p class="card-text"><strong>Završetak aukcije:</strong> @Model.zavrsetakAukcije.ToString("dd.MM.yyyy HH:mm")</p>
            <p class="card-text"><strong>Status:</strong> @Model.status</p>
            <a asp-action="Bid" asp-route-id="@Model.umjetninaID"
               class="btn btn-sm"
               style="background-color: #B39DDB; color: white; border-radius: 6px; padding: 8px 16px; font-weight: 600;">
                BID
            </a>
             
            </div>
        </div>
    </div>
</div>
