@model Grupa5Tim3.Models.Aukcija

@{
    ViewData["Title"] = "Auction details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 24rem; border-radius: 16px;">
        <div class="card-body text-center">
            <h4 class="card-title mb-3"><strong>Auction details</strong></h4>

            <img src="@Url.Content(ViewBag.SlikaPath)" alt="Slika umjetnine"
                 class="img-fluid mb-3" style="max-height: 300px; object-fit: cover;" />

            <p class="card-text"><strong>Artwork ID:</strong> @Model.umjetninaID</p>
            <p class="card-text"><strong>Current price:</strong> @Model.trenutnaCijena</p>
            <p class="card-text"><strong>Auction start:</strong> @Model.pocetakAukcije.ToString("dd.MM.yyyy HH:mm")</p>
            <p class="card-text"><strong>Auction end:</strong> @Model.zavrsetakAukcije.ToString("dd.MM.yyyy HH:mm")</p>
            @{
                Status status = @Model.status;
                string backgroundColor = status == Status.Aktivna ? "#28a745" : "#dc3545"; 
            }

            <p class="card-text">
                <strong>Status:</strong>
                <span style="background-color:@backgroundColor; color:white; font-weight:bold; padding:4px 12px; border-radius:6px; margin-left:10px;">
                    @status
                </span>
            </p>
            <a asp-action="Bid" asp-route-id="@Model.umjetninaID"
               class="btn btn-sm"
               style="background-color: #B39DDB; color: white; border-radius: 6px; padding: 8px 16px; font-weight: 600;">
                BID
            </a>
            <div class="mt-4 text-center">
                <a asp-action="Index">Back to list</a>
            </div>
             
            </div>
        </div>
    </div>
</div>
